<h3 class="mb-3">Danh sách sản phẩm đang đăng bán</h3>

{{#if products}}
<div class="table-responsive" style="max-height: 1000px;">
    <table class="table table-bordered">
        <thead>
            <tr class="text-center">
                <th scope="col">#</th>
                <th scope="col">Sản phẩm</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td class="text-center fw-semibold">{{inc @index}}</td>
                <td class="navbar navbar-expand-lg">
                    <div class="container-md">
                        <p class="">{{product_name}}</p>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item me-3 mb-3">
                                    <a href="/{{product_id}}/update_description" class="btn btn-primary ms-auto">Bổ sung mô tả</a>
                                </li>
                                <li class="nav-item me-3 mb-3">
                                    <a href="/product/details/{{product_id}}" class="btn btn-outline-primary">Xem chi tiết <i class="bi bi-eye"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>    
{{else}}
<div class="alert alert-info text-center">
    <p class="mt-3">Bạn chưa đăng bán sản phẩm nào</p>
    {{#if (eqString currentUser.role 'seller')}}
    <a href="/{{currentUser.user_id}}/add" class="btn btn-primary">Bắt đầu bán sản phẩm</a>
    {{else}}
    <a href="/account/upgrade-request">Nâng cấp tài khoản</a>
    {{/if}}
    
</div>
{{/if}}
