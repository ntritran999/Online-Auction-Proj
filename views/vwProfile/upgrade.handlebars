{{#section 'script'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
const form = document.getElementById('formUpgrade');
if (form) {
    form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const note = document.getElementById('note').value;
        const agree = document.getElementById('agree').checked;
        console.log(note);
        console.log(agree);
        if (!agree) {
            Swal.fire({
                icon: 'warning',
                title: 'Chưa xác nhận',
                text: 'Vui lòng xác nhận cam kết tuân thủ quy định'
            });
            return;
        }
        
        if (note.length < 10) {
            Swal.fire({
                icon: 'warning',
                title: 'Lý do quá ngắn',
                text: 'Vui lòng nhập lý do chi tiết hơn (ít nhất 10 ký tự)'
            });
            return;
        }
        
        const result = await Swal.fire({
            title: 'Xác nhận gửi yêu cầu',
            text: 'Bạn có chắc chắn muốn gửi yêu cầu nâng cấp lên Seller?',
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Gửi',
            cancelButtonText: 'Hủy'
        });
        
        if (!result.isConfirmed) return;
        
        try {
            const response = await fetch('/account/upgrade-request', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ note })
            });
            
            const data = await response.json();
            
            if (data.success) {
                await Swal.fire({
                    icon: 'success',
                    title: 'Thành công',
                    text: data.message
                });
                location.reload();
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: data.message
                });
            }
        } catch (error) {
            console.error(error);
            Swal.fire({
                icon: 'error',
                title: 'Lỗi',
                text: 'Có lỗi xảy ra'
            });
        }
    });
}
</script>
{{/section}}

<h3 class="mb-4">Yêu cầu nâng cấp lên Seller</h3>

<div class="alert alert-info">
    <h5><i class="bi bi-info-circle"></i> Thông tin</h5>
    <ul>
        <li>Sau khi gửi yêu cầu, admin sẽ xem xét trong vòng <strong>7 ngày</strong></li>
        <li>Bạn cần cung cấp lý do rõ ràng để được phê duyệt</li>
        <li>Sau khi được duyệt, bạn có thể đăng bán sản phẩm trên hệ thống</li>
    </ul>
</div>

{{#if existingRequest}}
<div class="card mb-4">
    <div class="card-header">
        <h5>Trạng thái yêu cầu hiện tại</h5>
    </div>
    <div class="card-body">
        <p><strong>Ngày gửi:</strong> {{format_datetime existingRequest.created_at}}</p>
        <p><strong>Lý do:</strong> {{existingRequest.note}}</p>
        <p><strong>Trạng thái:</strong> 
            {{#if (eqString existingRequest.status 'pending')}}
            <span class="badge bg-warning">
                <i class="bi bi-clock"></i> Đang chờ xử lý
            </span>
            {{else if (eqString existingRequest.status 'approved')}}
            <span class="badge bg-success">
                <i class="bi bi-check-circle"></i> Đã chấp nhận
            </span>
            {{else}}
            <span class="badge bg-danger">
                <i class="bi bi-x-circle"></i> Đã từ chối
            </span>
            {{/if}}
        </p>
        
        {{#if (eqString existingRequest.status 'approved')}}
        <div class="alert alert-success">
            <i class="bi bi-check-circle"></i> 
            Yêu cầu của bạn đã được chấp nhận! Vui lòng đăng xuất và đăng nhập lại để cập nhật quyền hạn.
        </div>
        {{/if}}
        
        {{#if (eqString existingRequest.status 'rejected')}}
        <div class="alert alert-danger">
            <i class="bi bi-x-circle"></i> 
            Yêu cầu của bạn đã bị từ chối. Bạn có thể gửi yêu cầu mới.
        </div>
        {{/if}}
    </div>
</div>
{{/if}}

{{#if (or (not existingRequest) (eqString existingRequest.status 'rejected'))}}
<div class="card">
    <div class="card-header">
        <h5>Gửi yêu cầu mới</h5>
    </div>
    <div class="card-body">
        <form id="formUpgrade">
            <div class="mb-3">
                <label for="note" class="form-label">
                    Lý do muốn trở thành Seller <span class="text-danger">*</span>
                </label>
                <textarea class="form-control" id="note" name="note" rows="5" 
                          placeholder="Vui lòng mô tả chi tiết lý do bạn muốn bán hàng trên hệ thống..."
                          minlength="10" required></textarea>
                <div class="form-text">Tối thiểu 10 ký tự</div>
            </div>
            
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="agree" required>
                <label class="form-check-label" for="agree">
                    Tôi cam kết tuân thủ các quy định của hệ thống và cung cấp sản phẩm chất lượng
                </label>
            </div>
            
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-send"></i> Gửi yêu cầu
            </button>
        </form>
    </div>
</div>
{{/if}}